int ledPins[4]={2,3,4,5};

void setup()
{// put yout setup code here, to run once:
for(int i=0;i<4;i++)
{pinMode(ledPins[i],OUTPUT);}
}


void loop()
{// put your main code here, to run repeat:
for(int count=0;count<16;count++)
{displayBinary(count);
delay(1000);}}

void displayBinary(int num)
{for(int i=0;i<4;i++)
{digitalWrite(ledPins[i],(num>>i)&1);
}
}
