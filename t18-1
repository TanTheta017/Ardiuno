float radius;
String msg="Radius of your circle: ";
float area;
String msg2="Your Circle has area of: ";
float pi=3.14;

void setup()
{
  Serial.begin(9600);
}

void loop()
{
  Serial.println(msg);
  while(Serial.available()==0)
  {}
  radius=Serial.parseFloat();
  area=pi*radius*radius;
  Serial.print(msg2);
  Serial.println(area);
}
